# Netlify HTTP Headers
# https://docs.netlify.com/routing/headers/

/*
  # Security Headers
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()

  # Content Security Policy (strikt - keine externen Ressourcen)
  Content-Security-Policy: default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; img-src 'self' data:; frame-src 'none'; connect-src 'self'

  # HTTPS Enforcement (1 Jahr)
  Strict-Transport-Security: max-age=31536000; includeSubDomains

# Cache static assets
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache HTML files (short cache for updates)
/*.html
  Cache-Control: public, max-age=3600, must-revalidate
